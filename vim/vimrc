  if executable('ag')
    let g:ackprg = "ag --nocolor --nogroup --column"
  elseif executable('ack-grep')
    let g:ackprg = "ack-grep --nocolor --nogroup --column"
  elseif executable('ack')
    let g:ackprg = "ack --nocolor --nogroup --column"
  endif
