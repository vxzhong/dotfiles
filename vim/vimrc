  echon 'Installing Vundle...'
  silent !git clone https://github.com/VundleVim/Vundle.vim.git $HOME/.vim/bundle/Vundle.vim
  echo 'done.'
  if v:shell_error
    echoerr 'Vundle installation has failed!'
    finish
  endif
endif

